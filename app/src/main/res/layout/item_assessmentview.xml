<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/courseAssessmentRelativeLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/assessmentView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:padding="50dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameAssessmentTV"
                android:layout_width="316dp"
                android:layout_height="wrap_content"
                android:text="@string/assessment_name"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/typeAssessmentTV"
                android:layout_width="316dp"
                android:layout_height="wrap_content"
                android:text="@string/assessment_type"
                android:textAlignment="center"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dateAssessmentTV"
                    android:layout_width="266dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/due_date"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/itemEditAssessmentIB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_edit_black_24dp" />

                <ImageButton
                    android:id="@+id/itemDeleteAssesmentIB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_delete_black_24dp" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
